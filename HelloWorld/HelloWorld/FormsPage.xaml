<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.FormsPage"
             >

   <TableView Intent="Form">
      <TableRoot>
         <TableSection Title="Basics">
            <TextCell Text="Name" Detail="Gary" />
            <EntryCell Label="Title" Placeholder="(eg Shopping)" Keyboard="Text"/>
            <SwitchCell Text="Notification" On="True"/>
         </TableSection>

         <TableSection Title="Custom Cells" >
            <ViewCell>
               <StackLayout Orientation="Horizontal" Padding="13, 0">
                  <Label Text="Starts" VerticalOptions="Center"/>
                  <DatePicker Date="1 Jan 2016" HorizontalOptions="EndAndExpand"/>
               </StackLayout>
            </ViewCell>
         </TableSection>
      </TableRoot>
   </TableView>

</ContentPage>