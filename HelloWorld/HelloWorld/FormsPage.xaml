<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.FormsPage"
             xmlns:local="clr-namespace:HelloWorld"
             >

   <TableView Intent="Form">
      <TableRoot>
         <TableSection Title="Basics">
            <TextCell Text="Name" Detail="Gary" />
            <EntryCell Label="Title" Placeholder="(eg Shopping)" Keyboard="Text"/>
            <SwitchCell Text="Notification" On="True"/>
            <local:DateCell Label="Start Date"/>
            <local:DateCell Label="End Date"/>
         </TableSection>

      </TableRoot>
   </TableView>

</ContentPage>